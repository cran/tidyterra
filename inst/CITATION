year <- format(Sys.time(), "%Y")
abs <- trimws(gsub("\\s+", " ", meta$Description))
abs <- gsub("'", "", abs)

bibentry(
  "Manual",
  header = paste0("To cite '", meta$Package, "' in publications use:"),
  title = paste("{tidyterra}:", gsub("'", "", meta$Title)),
  doi = "10.5281/zenodo.6572471",
  author = c(person("Diego", "HernangÃ³mez")),
  year = year,
  version = meta$Version,
  url = unlist(strsplit(meta$URL, ","))[1],
  abstract = abs,
  key = "R-tidyterra",
  textVersion = paste0("Hernangomez D (",year,"). _tidyterra: ",
    gsub("'", "", meta$Title),"_. <https://doi.org/10.5281/zenodo.6572471>, <",
    unlist(strsplit(meta$URL, ","))[1],">")
)
